<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="options">


    <Style x:Key="NWindow" TargetType="mah:MetroWindow">
        <Setter Property="Icon" Value="pack://application:,,,/Stroller;component/Resources/Img/icon.ico"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource AccentColorBrush}"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
    </Style>
</ResourceDictionary>