<UserControl x:Class="Stroller.Views.BrowseImagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stroller.Views"
             xmlns:controls="clr-namespace:Stroller.Views.Controls"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <controls:NImagesList ItemsSource="{Binding ImagesList}" ItemsPerRow="4"
                              cal:Message.Attach="[Event DeleteClicked] = [Action DeleteItem($eventArgs)]; [Event DownloadJsonClicked] = [Action DownloadJson($eventArgs)]; [Event DownloadZipClicked] = [Action DownloadZip($eventArgs)]; [Event ItemSelected] = [Action OpenItem($eventArgs)]">
        </controls:NImagesList>
    </Grid>
</UserControl>
