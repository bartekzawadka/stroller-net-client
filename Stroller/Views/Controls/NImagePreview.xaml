<UserControl x:Class="Stroller.Views.Controls.NImagePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stroller.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Image Stretch="Uniform" Name="CurrentImage" 
           MouseDown="CurrentImage_OnMouseDown" 
           MouseUp="CurrentImage_OnMouseUp" 
           MouseMove="CurrentImage_OnMouseMove"
           MouseLeave="CurrentImage_OnMouseLeave">
    </Image>
</UserControl>
